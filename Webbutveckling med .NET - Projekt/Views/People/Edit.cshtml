@model Webbutveckling_med_.NET___Projekt.Models.Person

@{
	ViewData["Title"] = "Edit Person";
}
<div class="container">
	<h1>Edit Person</h1>

	<!--Edit person form-->
	<hr />
	<div class="row">
		<div class="formWrapper">
			<form asp-action="Edit" class="dogPerson">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="PersonId" />
				<!--Firstname-->
				<div class="form-group">
					<label asp-for="Firstname" class="control-label"></label>
					<input asp-for="Firstname" class="form-control" />
					<span asp-validation-for="Firstname" class="text-danger"></span><br><br>
				</div>
				<!--Lastname-->
				<div class="form-group">
					<label asp-for="Lastname" class="control-label"></label>
					<input asp-for="Lastname" class="form-control" />
					<span asp-validation-for="Lastname" class="text-danger"></span><br><br>
				</div>
				<!--Phone-->
				<div class="form-group">
					<label asp-for="PhoneNr" class="control-label"></label>
					<input asp-for="PhoneNr" class="form-control" />
					<span asp-validation-for="PhoneNr" class="text-danger"></span><br><br>
				</div>
				<!--Email-->
				<div class="form-group">
					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span><br><br>
				</div>
				<!--City-->
				<div class="form-group">
					<label asp-for="City" class="control-label"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span><br><br>
				</div>
				<!--Description-->
				<div class="form-group">
					<label asp-for="Description" class="control-label">Description:</label>
					<textarea asp-for="Description" class="form-control" rows="5" placeholder="Tell us a little about who you are and your living situation..."></textarea>
					<span asp-validation-for="Description" class="text-danger"></span><br><br><br><br>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>

	@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
	}
</div>