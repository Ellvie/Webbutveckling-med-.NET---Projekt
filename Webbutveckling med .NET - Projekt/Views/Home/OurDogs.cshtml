    </div>

</div>
-->


<div class="dogWrapper">

        @foreach (var dog in Model)
        {
             
            <div class="dogFocus">
                <a asp-controller="Dogs" asp-action="Details" asp-route-id="@dog.DogId">
                <img src="~/pics/@dog.Pic" alt="🐶" class="@(dog.Pic == "default.png" ? "picDefault" : "picCustom")">
                </a>
                <div class="text">
                    <p>@dog.Name</p>
                </div>
            </div>
        }
</div>
