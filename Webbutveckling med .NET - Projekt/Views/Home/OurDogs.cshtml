@{
    ViewData["Title"] = "Our Dogs";
}

@model List<Dog>;


<div class="ourDogs">
    <div class="header">
        <img src="~/pics/green.jpg" class="headerPic"/>
        <h2>@ViewData["Title"]</h2>
    </div>
</div>
<!--
